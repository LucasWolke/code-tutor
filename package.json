{
    "name": "code-tutor",
    "version": "0.1.0",
    "description": "Java Web IDE with AI support",
    "private": true,
    "workspaces": [
        "frontend",
        "backend/lsp",
        "backend",
        "backend/sandbox"
    ],
    "scripts": {
        "dev:frontend": "npm run dev --workspace frontend",
        "build:frontend": "npm run build --workspace frontend",
        "start:frontend": "npm run start --workspace frontend",
        "build:backend": "npm run build --workspace backend",
        "start:backend": "npm run start:services --workspace backend",
        "start:lsp": "docker-compose -f backend/lsp/docker-compose.yml up -d",
        "start:sandbox": "docker-compose -f backend/sandbox/docker-compose.yml up -d",
        "stop:lsp": "docker-compose -f backend/lsp/docker-compose.yml down",
        "stop:sandbox": "docker-compose -f backend/sandbox/docker-compose.yml down",
        "start:services": "concurrently -n LSP,SANDBOX \"npm run start:lsp\" \"npm run start:sandbox\"",
        "stop:services": "concurrently -n LSP,SANDBOX \"npm run stop:lsp\" \"npm run stop:sandbox\"",
        "dev": "concurrently -n FRONTEND,SERVICES \"npm run dev:frontend\" \"npm run start:services\"",
        "build": "npm run build:frontend && npm run build:backend",
        "start": "npm run dev",
        "stop": "npm run stop:services"
    },
    "keywords": [
        "java",
        "ide",
        "monaco",
        "lsp",
        "ai"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@shikijs/monaco": "^3.2.1",
        "concurrently": "^8.2.2"
    },
    "dependencies": {
        "@codingame/monaco-vscode-languages-service-override": "^15.0.3",
        "@codingame/monaco-vscode-python-default-extension": "^15.0.3",
        "@codingame/monaco-vscode-textmate-service-override": "^15.0.3",
        "@codingame/monaco-vscode-theme-defaults-default-extension": "^15.0.3",
        "@codingame/monaco-vscode-theme-service-override": "^15.0.3",
        "@langchain/core": "^0.3.55",
        "@langchain/google-genai": "^0.2.5",
        "@langchain/openai": "^0.5.10",
        "langchain": "^0.3.24",
        "monaco-editor": "^0.36.1",
        "monaco-languageclient": "^5.0.1",
        "shiki": "^3.2.1",
        "vscode": "npm:@codingame/monaco-vscode-api@~1.76.6"
    }
}